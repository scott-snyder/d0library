C
C ****  define constants for camac words
C
      INTEGER NUM_TAGWORDS, TAGWORD_OFFSET
      PARAMETER( NUM_TAGWORDS = 1, TAGWORD_OFFSET = 0 )
      INTEGER NUM_TDC_WORDS, TDC_OFFSET
      PARAMETER( NUM_TDC_WORDS = 6 )
      PARAMETER( TDC_OFFSET = TAGWORD_OFFSET + NUM_TAGWORDS )
      INTEGER NUM_LD_TDC_WORDS, LD_TDC_OFFSET
      PARAMETER( NUM_LD_TDC_WORDS = 8 )
      PARAMETER( LD_TDC_OFFSET = TDC_OFFSET + NUM_TDC_WORDS )
      INTEGER NUM_ADC_WORDS, ADC_OFFSET
      PARAMETER( NUM_ADC_WORDS = 12 )
      PARAMETER( ADC_OFFSET = LD_TDC_OFFSET + NUM_LD_TDC_WORDS )
C
C ****  Define constants for energy cut selections
C
      INTEGER NO_E_CUT
      INTEGER NARROW_E_CUT
      INTEGER WIDE_E_CUT
      PARAMETER( NO_E_CUT = 0 )
      PARAMETER( NARROW_E_CUT = 1 )
      PARAMETER( WIDE_E_CUT = 2 )
C
C ****  define constants for size of ntuple
C
      INTEGER CAMAC_WORDS
      INTEGER TRK_FIT_WORDS
      INTEGER CALORIM_WORDS
      INTEGER NTUPLE_SIZE
      PARAMETER( CAMAC_WORDS = NUM_TAGWORDS+NUM_TDC_WORDS+
     &  NUM_LD_TDC_WORDS+NUM_ADC_WORDS+1 )
      PARAMETER( TRK_FIT_WORDS = 15 )
      PARAMETER( CALORIM_WORDS = 67 )
      PARAMETER( NTUPLE_SIZE = CAMAC_WORDS 
     &          + TRK_FIT_WORDS + CALORIM_WORDS )
C
C ****  define location of starting words
C
      INTEGER CAMAC_BGN_O,CAMAC_END
      PARAMETER( CAMAC_BGN_O = 0, CAMAC_END = CAMAC_BGN_O+CAMAC_WORDS )
      INTEGER TRK_FIT_BGN_O, TRK_FIT_END
      PARAMETER( TRK_FIT_BGN_O = CAMAC_BGN_O + CAMAC_WORDS )
      PARAMETER( TRK_FIT_END = TRK_FIT_BGN_O + TRK_FIT_WORDS )
      INTEGER CALORIM_BGN_O, CALORIM_END
      PARAMETER( CALORIM_BGN_O = TRK_FIT_BGN_O + TRK_FIT_WORDS )
      PARAMETER( CALORIM_END = CALORIM_BGN_O + CALORIM_WORDS)
