      INTEGER PDIM,TDIM,QDIM,SDIM   
      PARAMETER (PDIM=100,TDIM=1000,QDIM=15,SDIM=50)    
      COMMON/DHSCOM/DIMDHS,NDHS,DHSTYP(PDIM),DHSFLG(PDIM),  
     1 DIMPID,NMPID,PIDLNK(TDIM),PIDKEY(TDIM),IPID(TDIM),   
     2 DIMPIN,NPIN,PINPNT(2,QDIM),PINPAL(SDIM), 
     3 DHSLAB(PDIM),CPID(TDIM),PINLAB(SDIM) 
      CHARACTER DHSLAB*8,CPID*20,PINLAB*12  
      INTEGER DIMDHS,NDHS,DHSTYP,DHSFLG,DIMPID,NMPID,IPID   
      INTEGER PIDLNK,PIDKEY,DIMPIN,NPIN,PINPNT,PINPAL   
      REAL RPID(TDIM)   
      LOGICAL LPID(TDIM)    
      EQUIVALENCE (IPID,RPID,LPID)  
C   
C  ********** DESCRIPTION OF VARIABLES IN /DHSCOM/  **********  
C   
C  DIMDHS      :  MAXIMUM NUMBER OF ACTIONS.    
C  NDHS        :  NUMBER OF ACTIONS DEFINED.    
C  DHSTYP(K)   :  IDENTIFIES TYPE OF ACTION, 1 = 1-D PLOT,  
C                 2 = SCATTERPLOT, 3 = TABLE,   
C                 4 = AVERAGES, 5 = PULSE TRACE, 6 = QUANTILES. 
C  DHSFLG(K)   : ACTION STATUS, 1 = ACTIVE, 0 = INACTIVE.   
C  DHSLAB(K)   :  NAME OF ACTION K. 
C  DIMPID      :  MAXIMUM NUMBER OF DATA ITEMS. 
C  NMPID       :  NUMBER OF DATA ITEMS. 
C  PIDKEY(L)   :  KEY FOR ITEM K. GIVES DATA TYPE AND USE.  
C  PIDLNK(L)   :  POINTS TO ACTION USING ITEM K.    
C  IPID(L)     :  INTEGER DATA ITEM 
C  RPID(L)     :  REAL DATA ITEM.   
C  LPID(L)     :  LOGICAL DATA ITEM.    
C  CPID(L)     :  CHARACTER DATA ITEM.  
C  DIMPIN      :  MAXIMUM NUMBER OF ITEM CLASSES.   
C  NPIN        :  NUMBER OF ITEM CLASSES.   
C  PINPNT(J,L) :  J = 1,2 POINT TO SET OF CLASSES FOR ACTION TYPE L.    
C  PINPAL(K)   :  NUMBER REPRESENTATION OF CLASS K. 
C  PINLAB(K)   :  NAME FOR CLASS K. 
C   
C  **************  END DESCRIPTION OF /DHSCOM/  **************  
