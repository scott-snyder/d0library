      INTEGER NJTMX
      PARAMETER( NJTMX = 5 )
      INTEGER NELMX
      PARAMETER( NELMX = 2 )
      COMMON /QCD_SMEAR_EVENT_com/ 
     &  JET(3,NJTMX),ELEC(7,NELMX),JETS(7,NJTMX),ELE_SMEAR(3,NELMX),
     &  REST(2),JET_SMEAR(3,NJTMX),ELEC_SMEAR(7,NELMX),
     &  REST_SMEAR(2),JETS_SMEAR(7,NJTMX),
     &  NEUT_SMEAR(2),SIG_ELE(3,NELMX),SIG_JET(3,NJTMX),SIG_RESTP(2),
     &  SIG_REST_PT,WMTC_SMEAR,METC1_SMEAR,REST_PT,REST_PT_SMEAR,
     &  zmass,
     &  ELE(3,NELMX),NEUT(2),nele,NJETS,
     &  NSMEAR,MET_SMEAR_RANGE(2),
     &  MET_CUT,TRMS_CUT,ZERO_MET

      INTEGER NELE,NJETS
      DOUBLE PRECISION    ELE,NEUT,JET,ELEC,JETS
      DOUBLE PRECISION    ELE_SMEAR,REST,JET_SMEAR,ELEC_SMEAR
      DOUBLE PRECISION    REST_SMEAR,JETS_SMEAR,NEUT_SMEAR
      DOUBLE PRECISION    SIG_ELE,SIG_JET,SIG_RESTP,SIG_REST_PT
      REAL    MET_SMEAR_RANGE
      INTEGER NSMEAR
      DOUBLE PRECISION    WMTC_SMEAR,METC1_SMEAR
      DOUBLE PRECISION    REST_PT,REST_PT_SMEAR
      REAL    MET_CUT,TRMS_CUT
      LOGICAL ZERO_MET
      DOUBLE PRECISION ZMASS
C NELE = NUMBER OF ELECTRONS
C ELE = ELECTRON POLAR ENERGY , ETA , PHI
C NEUT = NEUTRINO
C NJETS = NUMBER OF JETS
C JET = JET POLAR
C ELEC = ELECTRON UNSMEARED 4 VECTOR
C JETS = JET UNSMEARED 4 VECTOR
C ELE_SMEAR = ELECTRON SMEARED POLAR
C REST = REST OF THE EVENT PT
C JET_SMEAR = JET SMEARED POLAR 
C ELEC_SMEAR = SMEARED ELECTRON 4 VECTORS
C REST_SMEAR = SMEARED REST OF EVENT
C JETS_SMEAR = SMEARED JET 4 VECTORS
C NEUT_SMEAR = NEUTRINO SMEARED 2 VECTOR
C SIG_ELE = SIGMA FOR ELECTRON ENERGY,ETA AND PHI
C SIG_JET = SIGMA FOR JET ENERGY,ETA AND PHI
C SIG_RESTP = SIGMA OF REST OF PT COMPONENTS
C SIG_REST_PT = SIGMA FOR REST OF THE EVENT PT
C NSMEAR = NUMBER OF SMEARS PER EVENT
C WMTC_SMEAR = SMEARED TRANSVERSE MASS
C METC1_SMEAR = SMEARED CORRECTED MISSING ET
C REST_PT = PT OF REST OF EVENT
C REST_PT_SMEAR = SMEARED PT OF REST OF EVENT
C MET_CUT = WILL WRITE NTUPLE IF GREATER THAN THIS
C TRMS_CUT = WILL WRITE NTUPLE IF TRMS GREATER THAN THIS
C ZERO_MET = IF TRUE WILL SET INIT MET OF UNSMEARED EVENT TO ZERO
C            BY SHARING IT WITH OTHER ENTITIES.
C ZMASS = EFFECTIVE MASS OF ELECTRON PAIR
